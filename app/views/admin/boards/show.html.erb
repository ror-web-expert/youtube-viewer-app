<div class="max-w-xl mx-auto px-4 my-auto">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <%= render @board %>
    <div class ='flex md:gap-4 gap-1 md:flex-row flex-col'>
      <%= link_to 'Edit this board', edit_admin_board_path(@board), class: "flex-1 btn hover:text-white btn text-center mt-3 block bg-gray-100 font-medium hover:bg-indigo-600 shadow-sm group transition duration-300 ease-in-out " %>
      <%= button_to 'Destroy this board', admin_board_path(@board), method: :delete, class: "flex-1 btn hover:text-white btn text-center mt-3 block bg-gray-100 font-medium hover:bg-indigo-600 shadow-sm group transition duration-300 ease-in-out " %>
      <%= link_to 'Back to boards', admin_boards_path, class: "flex-1 btn hover:text-white btn text-center mt-3 block bg-gray-100 font-medium hover:bg-indigo-600 shadow-sm group transition duration-300 ease-in-out " %>
    </div>
  </div>
</div>
