<div id="<%= dom_id board %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= board.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Source url:</strong>
    <%= board.source_url %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this Board", admin_board_path(board), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this Board', edit_admin_board_path(board), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Scrape', scrape_jobs_admin_board_path(board), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
